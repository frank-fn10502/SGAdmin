    <script>
        $(function () {
            var vueTable = new Vue({
                el: "#vueTable",
                data: {
                    isBusy: true,
                    fields: null,
                    items: null
                },
                mounted: function () {
                    let self = this;
                    console.log("this.isBusy: ", self.isBusy);
