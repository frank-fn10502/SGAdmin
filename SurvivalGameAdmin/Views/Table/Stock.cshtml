                        data: "data",
                        dataType: "Json",
                        success: function (result) {
                            self.isBusy = false;
                            console.log("this.isBusy: ", self.isBusy);
                            if (result.IsSuccess) {

                                var target = result.Data.FiledList.indexOf('Color');
                                result.Data.FiledList[target] = {
